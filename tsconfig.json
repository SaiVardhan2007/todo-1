{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // For Node types
    "types": ["node"],

    // Source maps (optional, nice for debugging)
    "sourceMap": true
  },
  "include": ["src"]
}
